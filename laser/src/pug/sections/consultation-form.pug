            input#inputEmail.form-control(type='email', aria-describedby='emailHelp', placeholder='Email')
          .form-group
            input#inputTell.form-control(type='tel', placeholder='Телефон')
          +btnCallbackForm('перезвоните мне')

          small.small-label.mt-3 * мы наберем вас в течении 15 минут
          img(src="assets/img/logo-bg.png")
