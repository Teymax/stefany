mixin btnCallback(text, className)
  .btn-callback(class!=attributes.class href=href)= className
    .text-section
      +penSvg
      span= text
    .arrow-section
      +arrowSvg
mixin customBtn(text, className)
  .btn-callback.no-svg(class!=attributes.class)= className
    .text-section
      span= text
    .arrow-section
      +arrowSvg

mixin salonSwitcher
  .container.city-switcher
    .row.no-gutters.w-25
      .col-12.col-lg-6
        a.nav-link-text.btn-simple-map.city-trigger.mr-3(data-salon='nail') Nails
      .col-12.col-lg-6
        a.nav-link-text.btn-simple-map.city-trigger.mr-3(data-salon='hair') Hairs

// breadcrumbs
mixin breadcrumbs(main, chapter, chapterLink, title, titleLink)
  p.breadcrumbs.mb-0
    a(href="index.html")= main
    span.separator /
    a(href=chapterLink)= chapter
    span.separator /
    a(href=titleLink aria-current="page")= title
    span.city-in-dynamic

mixin breadcrumbsSmall(main, title, titleLink)
  p.breadcrumbs
    a(href="index.html")= main
    span.separator /
    a(href=titleLink aria-current="page")= title
    span.city-in-dynamic
